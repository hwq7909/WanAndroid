<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:background="@color/transparent"
    android:gravity="center"
    tools:ignore="all"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        tools:ignore="all" android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingHorizontal="55px"
        android:orientation="vertical"
        android:id="@+id/content_ll">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_hint"
            android:textSize="30px"
            android:layout_marginTop="80px"
            android:text="删除"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_content"
            android:textSize="28px"
            android:layout_marginTop="66px"
            android:textColor="#666666"
            android:text="是否自动删除？"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:layout_marginRight="10px"
            android:layout_marginLeft="4px"/>

        <TextView
            android:background="#b9b9b9"
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:id="@+id/line_tv"
            android:layout_marginTop="40px"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_confirm_cancel"
            android:layout_marginTop="77px"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:baselineAligned="false"
            android:layout_marginBottom="68px">

            <TextView
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingHorizontal="70px"
                android:id="@+id/tv_confirm"
                android:textSize="30px"
                android:text="确定"
                android:includeFontPadding="false"
                android:paddingBottom="16px"
                android:paddingTop="16px"
                android:layout_weight="1"/>

            <TextView
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:paddingHorizontal="25px"
                android:id="@+id/tv_add_black"
                android:textSize="30px"
                android:textColor="#FFFFFF"
                android:text="加入黑名单"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:paddingBottom="16px"
                android:paddingTop="16px"
                android:layout_weight="1"/>

            <View
                android:background="@color/transparent"
                android:layout_height="1px"
                android:layout_width="54px"
                android:id="@+id/space_view"/>

            <TextView
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingHorizontal="70px"
                android:id="@+id/tv_cancel"
                android:textSize="30px"
                android:text="取消"
                android:includeFontPadding="false"
                android:paddingBottom="16px"
                android:paddingTop="16px"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_confirm2"
            android:textSize="28px"
            android:layout_marginTop="60px"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:layout_marginRight="100px"
            android:layout_marginLeft="100px"
            android:visibility="gone"
            android:paddingBottom="16px"
            android:paddingTop="16px"/>

    </LinearLayout>

</LinearLayout>