<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/head_empty"
            android:layout_width="match_parent"
            android:layout_height="0px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <LinearLayout
            android:id="@+id/head_ll_left"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/head_img_left"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/ic_right"
                android:rotation="180"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/head_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="30px"
                android:textColor="@color/black"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/head_ll_center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/head_img_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/head_text_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="30px"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/head_ll_right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/head_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:visibility="gone"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/head_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="30px"
                android:textColor="@color/black"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
